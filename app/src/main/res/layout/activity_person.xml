<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragment_setting"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_light">

    <!-- 顶部用户信息 -->
    <LinearLayout
        android:id="@+id/setting_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/myPhoto"
            android:layout_width="81dp"
            android:layout_height="103dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/person_user_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MyText2"
                android:text="账号:"
                />

            <TextView
                android:id="@+id/setting_tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                style="@style/MyText2"
                android:text="账号"
                />

        </LinearLayout>
    </LinearLayout>

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"></View>

    <!-- 个人设置选项 -->
    <LinearLayout
        android:id="@+id/setting_ll_history"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">


        <TextView
            android:id="@+id/mylist"
            style="@style/MyText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们" />
    </LinearLayout>

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"></View>

    <!-- 修改密码选项 -->
    <LinearLayout
        android:id="@+id/setting_ll_setting"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">


        <TextView
            android:id="@+id/changepwd"
            style="@style/MyText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码" />
    </LinearLayout>

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"></View>

    <!-- 版本信息选项 -->
    <LinearLayout
        android:id="@+id/setting_ll_version"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">


        <TextView
            android:id="@+id/none"
            style="@style/MyText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本信息" />
    </LinearLayout>

    <!-- 分隔空白 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <!-- 退出按钮 -->
    <Button
        android:id="@+id/exit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="退出"
        android:textColor="@color/white"
        android:backgroundTint="@color/crimson" />
    <Button
        android:id="@+id/delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="注销"
        android:textColor="@color/white"
        android:backgroundTint="@color/crimson" />
</LinearLayout>
